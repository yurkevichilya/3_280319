
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    <link rel="stylesheet" href="~/Content/Site.css">
</head>
<body>
    <div>
        <div class="container">
            <div class="table">
                <div class="table-header">
                    <div class="header__item">
                        <p><a class="filter__link__white" href="/Home/UsersOrdersAdd">Add</a></p>
                        <p><a class="filter__link__white" href="/Home/Index">Home</a></p>
                    </div>
                </div>
                <div class="table-content">
                    <div class="table-row">
                        <div class="table-data">
                            <p>Клиент</p>
                        </div>
                        <div class="table-data">
                            <p>Заказ</p>
                        </div>
                    </div>
                    @foreach (var b in ViewBag.UsersOrders)
                    {
                        <div class="table-row">
                            <div class="table-data">
                                @foreach (var us in ViewBag.Users)
                                {
                                    if (b.Id_User == us.Id)
                                    {
                                        <p>@us.Name</p>
                                    }
                                }
                            </div>
                            <div class="table-data">
                                <div class="table-data">
                                    @foreach (var or in ViewBag.Orders)
                                    {
                                        if (b.Id_Order == or.Id)
                                        {
                                            <p>@or.Name</p>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>